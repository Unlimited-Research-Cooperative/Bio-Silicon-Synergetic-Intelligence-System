// constants                                           
// general purpose registers
reg CLK;
// wires                                               
wire BCK;
wire DIN;
wire LCK;

wire sampler;                             

// assign statements (if any)                          
generator i1 (
// port map - connection between master ports and signals/registers   
	.BCK(BCK),
	.CLK(CLK),
	.DIN(DIN),
	.LCK(LCK)
);

// CLK
always
begin
	CLK = 1'b0;
	CLK = #500 1'b1;
